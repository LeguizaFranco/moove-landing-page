---

import whatsapp from "/src/assets/icons/whatsapp.svg?raw";
import instagram from "/src/assets/icons/instagram.svg?raw";

const { name, class: className } = Astro.props;

// Mapea los nombres a los Ã­conos importados
const icons = {
    whatsapp,
    instagram,
};

// Se asegura de que el icono exista
if (!icons[name]) {
    console.error(`Error: Icono '${name}' no encontrado.`);
}
---

<Fragment set:html={icons[name]} class={className} />
