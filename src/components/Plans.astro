---
import PlanCard from "../shared/PlanCard.astro";
import imagenPesas from "../assets/images/imagen-pesas.webp";
import perdidaGrasa from "../assets/images/perdida-grasa.webp";
import deportistas from "../assets/images/deportistas.webp";
import sinDolor from "../assets/images/sin-dolor.webp";
import reloj from "../assets/images/reloj.webp";

const plans = [
    {
        title: "Aumento de Masa Muscular",
        image: imagenPesas,
        alt: "Entrenamiento para aumento de masa muscular: rutinas de fuerza y guía nutricional",
        description:
            "Programa diseñado para quienes buscan ganar músculo de forma eficiente. Incluye entrenamientos de fuerza progresivos y guía nutricional.",
        features: [
            "Entrenamientos de fuerza progresiva",
            "Guía nutricional especializada",
            "Seguimiento personalizado",
        ],
    },
    {
        title: "Pérdida de Grasa",
        image: perdidaGrasa,
        alt: "Entrenamiento para pérdida de grasa: ejercicios de alta intensidad y nutrición para quemar calorías",
        description:
            "Entrenamiento enfocado en quemar calorías y mejorar la composición corporal. Combinamos ejercicios de alta intensidad con estrategias de alimentación.",
        features: [
            "Ejercicios de alta intensidad",
            "Estrategias nutricionales",
            "Quema grasa sin perder músculo",
        ],
    },
    {
        title: "Deportistas",
        image: deportistas,
        alt: "Plan de entrenamiento para deportistas: resistencia, agilidad y prevención de lesiones",
        description:
            "Plan ideal para mejorar el rendimiento en cualquier disciplina deportiva. Enfocado en resistencia, agilidad, fuerza y prevención de lesiones.",
        features: [
            "Adaptado a tu deporte",
            "Mejora de resistencia y agilidad",
            "Prevención de lesiones",
        ],
    },
    {
        title: "Sin Dolor",
        image: sinDolor,
        alt: "Entrenamiento sin dolor: movilidad, fortalecimiento y corrección postural",
        description:
            "Para quienes buscan entrenar sin molestias ni lesiones. Incluye ejercicios de movilidad, fortalecimiento y corrección postural.",
        features: [
            "Ejercicios de movilidad",
            "Fortalecimiento articular",
            "Corrección postural",
        ],
    },
    {
        title: "No Tengo Tiempo",
        image: reloj,
        alt: "Entrenamiento rápido: rutinas intensas en menos de 30 minutos",
        description:
            "Rutinas cortas pero efectivas para quienes tienen poco tiempo. Entrenamientos de alta intensidad en menos de 30 minutos.",
        features: [
            "Rutinas de 20-30 minutos",
            "Entrenamientos en casa o gimnasio",
            "Máximo resultado en mínimo tiempo",
        ],
    },
];
---

<section class="bg-gray-50 py-16 px-4 sm:px-6 lg:px-8" id="plans">
    <div class="max-w-7xl mx-auto">
        <div class="text-center mb-10">
            <h2 class="titulo">
                Nuestros <span class="text-blue-600"
                    >Planes de Entrenamiento</span
                >
            </h2>
            <p
                class="max-w-2xl mx-auto mb-8 md:mb-12 lg:text-2xl text-gray-600"
            >
                Programas científicos adaptados a tus objetivos personales
            </p>
        </div>

        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
            {plans.map((plan) => <PlanCard plan={plan} />)}
        </div>

        <div class="mt-16 text-center">
            <p class="text-lg text-gray-600 mb-6">
                ¿Necesitas ayuda para elegir tu plan ideal?
            </p>
            <a
                href="https://wa.me/2494547001"
                target="_blank"
                aria-label="Consulta gratuita"
                class="inline-flex items-center px-6 py-3 border border-transparent text-base font-bold rounded-md text-white bg-gray-900 hover:bg-gray-800 transition"
            >
                Consultanos
                <svg
                    class="ml-2 -mr-1 w-5 h-5"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                >
                    <path
                        fill-rule="evenodd"
                        d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                        clip-rule="evenodd"></path>
                </svg>
            </a>
        </div>
    </div>
</section>

<style>
    .titulo {
        font-family: "Bebas Neue", serif;
        font-size: 3rem;
        font-weight: 800;
        text-align: center;
    }

    @media (min-width: 640px) {
        .titulo {
            font-size: 3rem;
            line-height: 1.3;
        }
    }

    @media (min-width: 768px) {
        .titulo {
            font-size: 3rem;
            margin-bottom: 1.5rem;
        }
    }

    @media (min-width: 1024px) {
        .titulo {
            font-size: 3rem;
            margin-bottom: 2rem;
        }
    }
</style>
