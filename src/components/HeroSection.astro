---
import { Image } from "astro:assets";
import SocialIcon from "../shared/SocialIcon.astro";
import profe from "../assets/images/profe.webp"; // La ruta es relativa a la ubicación de tu archivo
import fondo from "../assets/images/fondo.webp"; // Asegúrate de que esta ruta sea correcta

const socialLinks = [
    {
        url: "https://wa.me/2494547001",
        icon: "whatsapp",
        ariaLabel: "Contáctanos por WhatsApp",
    },
    {
        url: "https://www.instagram.com/moovetandil/",
        icon: "instagram",
        ariaLabel: "Visita nuestro Instagram",
    },
    {
        url: "https://www.instagram.com/felipemedinatraining/",
        icon: "instagram",
        ariaLabel: "Visita el Instagram de Felipe",
    },
];

const colors = {
    whatsapp: "text-green-600 border-green-600 hover:bg-green-100",
    instagram: "text-blue-600 border-blue-600 hover:bg-blue-100",
};
---

<section class="relative text-white py-20 sm:py-32 md:py-40">
    <Image
        src={fondo}
        alt="Fondo con textura de gimnasio"
        class="absolute inset-0 w-full h-full object-cover -z-10"
        widths={[320, 640, 1024, 1920]}
        sizes="(max-width: 640px) 100vw, 100vw"
    />

    <div
        class="container mx-auto flex flex-col items-center px-5 sm:px-10 md:flex-row md:justify-between"
    >
        <div
            class="flex flex-col md:flex-row md:justify-between items-center space-y-12 md:space-y-0"
        >
            <div class="w-full md:w-1/2 text-center md:text-left">
                <h1 class="titulo">Transforma tu cuerpo con MOOVE</h1>
                <p
                    class="parrafo text-white bg-gray-900 p-4 rounded-md border-2 border-gray-600"
                >
                    Ofrecemos 5 planes de <span class="text-blue-600 font-bold"
                        >ENTRENAMIENTO</span
                    > y
                    <span class="text-blue-600 font-bold">NUTRICIÓN</span> 100% personalizados.
                </p>
                <a
                    href="#plans"
                    class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg shadow-md text-lg sm:text-xl transition duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50"
                >
                    Ver Planes
                </a>
            </div>

            <div
                class="w-11/12 sm:w-4/5 md:w-1/2 lg:w-1/3 bg-white rounded-2xl shadow-lg overflow-hidden lg:ml-[200px]"
            >
                <Image
                    src={profe}
                    alt="Felipe Medina, Dueño y Entrenador Personal de MOOVE"
                    class="w-full h-56 sm:h-64 object-cover object-top"
                    loading="eager"
                    width={500}
                    height={600}
                />
                <div class="p-6 text-center">
                    <h2 class="text-2xl font-bold text-gray-800 mb-2">
                        Felipe Medina
                    </h2>
                    <p class="text-blue-600 font-semibold mb-4">
                        Dueño & Entrenador Personal
                    </p>
                    <ul class="text-left space-y-2 mb-4">
                        <li class="text-black flex items-start">
                            <span class="text-blue-600 mr-2">▪</span>Profesor
                            Nacional en Educación Física. UNLP.
                        </li>
                        <li class="text-black flex items-start">
                            <span class="text-blue-600 mr-2">▪</span>Personal
                            training.
                        </li>
                        <li class="text-black flex items-start">
                            <span class="text-blue-600 mr-2">▪</span
                            >Entrenamiento presencial y online.
                        </li>
                        <li class="text-black flex items-start">
                            <span class="text-blue-600 mr-2">▪</span>Planes de
                            entrenamiento + nutrición.
                        </li>
                    </ul>

                    <div class="mt-4 flex justify-center gap-4">
                        {
                            socialLinks.map(({ url, icon, ariaLabel }) => (
                                <a
                                    href={url}
                                    class={`flex items-center border ${icon === "whatsapp" ? colors.whatsapp : colors.instagram} text-lg sm:text-xl transition-all duration-300 hover:scale-120 hover:shadow-lg p-2 rounded-full`}
                                    aria-label={ariaLabel}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                >
                                    <SocialIcon name={icon} class="h-8 w-8" />
                                </a>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        /* Estilos mejorados */
        .titulo {
            font-family: "Bebas Neue", serif;
            font-size: 3.2rem;
            font-weight: bold;
            text-align: center;
        }

        .parrafo {
            font-family: "Montserrat", serif;
            font-size: 1.2rem;
            margin-bottom: 1.5rem;
            line-height: 1.6;
            background-color: #1a1a1a; /* Fondo más oscuro para el párrafo */
            color: #fff; /* Blanco */
            padding: 1rem;
            border-radius: 8px; /* Bordes redondeados */
            border: 2px solid #444; /* Borde gris oscuro */
        }

        @media (min-width: 640px) {
            .titulo {
                font-size: 4rem;
                line-height: 1.3;
            }
            .parrafo {
                font-size: 1rem; /* Ajustar tamaño de fuente */
                padding: 0.75rem; /* Menos padding en el párrafo */
            }
        }

        @media (min-width: 768px) {
            .titulo {
                font-size: 4.5rem;
                margin-bottom: 1.5rem;
            }
            .parrafo {
                font-size: 1.125rem; /* Ajustar tamaño de fuente */
                padding: 1rem; /* Mantener padding estándar */
            }
        }

        @media (min-width: 1024px) {
            .titulo {
                font-size: 5.2rem;
                margin-bottom: 2rem;
            }
            .parrafo {
                font-size: 1.25rem; /* Ajustar tamaño de fuente */
                padding: 1rem; /* Padding estándar */
            }
        }
    </style>
</section>
