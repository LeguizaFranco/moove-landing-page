---
// Puedes añadir cualquier lógica que desees, como la fecha actual.
const { anio = new Date().getFullYear() } = Astro.props;
import { Image } from "astro:assets";
import logo from "../assets/icons/logo-oscuro.webp";
---

<footer class="bg-gray-900 text-white py-8 text-center" role="contentinfo">
    <div class="container mx-auto px-6">
        <!-- Logo con mejor accesibilidad -->
        <div class="flex justify-center mb-6">
            <a href="/" aria-label="Inicio - MOOVE">
                <Image
                    src={logo}
                    alt="Logo MOOVE - Entrenamiento profesional"
                    class="h-16 sm:h-20 w-auto object-contain transition-transform hover:scale-105"
                    width="160"
                    height="80"
                    loading="lazy"
                />
            </a>
        </div>

        <!-- Separador visual -->
        <hr class="my-4 border-gray-700 max-w-xs mx-auto" />

        <!-- Derechos -->
        <p
            class="text-sm md:text-base text-gray-400"
            aria-label="Derechos reservados"
        >
            © <span id="current-year">{anio}</span>
            <strong class="font-semibold text-white"> MOOVE</strong>.
        </p>
        <p class="mt-2 text-base text-gray-400">
            Hecho por
            <a
                href="https://www.instagram.com/tandil.solution/"
                target="_blank"
                rel="noopener noreferrer"
                class="underline hover:text-blue-400 transition"
                aria-label="Instagram de TandilSolution (se abre en nueva ventana)"
            >
                Tandil Solution
            </a>
        </p>
    </div>
</footer>
