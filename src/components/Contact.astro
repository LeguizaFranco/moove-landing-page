---
const socialLinks = [
    {
        name: "WhatsApp",
        url: "https://wa.me/2494547001",
        icon: "whatsapp",
        color: "green",
        ariaLabel: "Contáctanos por WhatsApp",
    },
    {
        name: "MooveTandil",
        url: "https://www.instagram.com/moovetandil/",
        icon: "instagram",
        color: "blue",
        ariaLabel: "Visita nuestro Instagram MooveTandil",
    },
    {
        name: "FelipeMedinaTraining",
        url: "https://www.instagram.com/felipemedinatraining/",
        icon: "instagram",
        color: "blue",
        ariaLabel: "Visita nuestro Instagram FelipeMedinaTraining",
    },
];

const colors = {
    whatsapp: "text-green-600 border-green-600 hover:bg-green-100",
    instagram: "text-blue-600 border-blue-600 hover:bg-blue-100",
};
---

<section
    id="contact"
    class="bg-gray-100 py-16 sm:py-24 lg:py-32 px-4 sm:px-6 lg:px-8"
>
    <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-start">
            <!-- Sección de Ubicación -->
            <div>
                <h2 id="location-heading" class="titulo">Nuestra Ubicación</h2>
                <div class="w-full h-[500px]">
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3172.541851019552!2d-59.140620323273254!3d-37.32967870652874!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95911f977af989fd%3A0xaa5b295a1e5791e8!2sChacabuco%20416%2C%20B7000%20Tandil%2C%20Provincia%20de%20Buenos%20Aires!5e0!3m2!1ses!2sar!4v1739588251394!5m2!1ses!2sar"
                        class="w-full h-full rounded-xl shadow-md border border-gray-300"
                        style="border:0;"
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"
                        title="Ubicación de nuestro gimnasio"
                        aria-labelledby="location-heading"
                    >
                    </iframe>
                </div>
            </div>

            <!-- Sección de Contacto -->
            <div>
                <h2 class="titulo">Contáctanos</h2>

                <!-- Enlaces Sociales -->
                <div class="flex flex-wrap gap-4 mb-8 justify-center">
                    {
                        socialLinks.map(({ name, url, icon, ariaLabel }) => (
                            <a
                                href={url}
                                class={`flex items-center border ${colors[icon]} text-lg sm:text-xl transition-all duration-300 hover:scale-105 hover:shadow-lg p-2 rounded-full`}
                                aria-label={ariaLabel}
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-8 w-8 mr-2"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    {icon === "whatsapp" ? (
                                        <>
                                            <path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9" />
                                            <path d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1" />
                                        </>
                                    ) : (
                                        <svg>
                                            <rect
                                                x="2"
                                                y="2"
                                                width="20"
                                                height="20"
                                                rx="5"
                                                ry="5"
                                            />
                                            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" />
                                            <line
                                                x1="17.5"
                                                y1="6.5"
                                                x2="17.51"
                                                y2="6.5"
                                            />
                                        </svg>
                                    )}
                                </svg>
                                {name}
                            </a>
                        ))
                    }
                </div>

                <!-- Código QR -->
                <div>
                    <h3
                        class="text-2xl font-semibold text-gray-900 mb-4"
                        id="qr-heading"
                    >
                        Escanea el código QR para más información
                    </h3>
                    <img
                        src="/qr.png"
                        alt="Código QR para contacto"
                        width={240}
                        height={240}
                        class="mx-auto md:mx-0"
                        aria-describedby="qr-heading"
                    />
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .titulo {
        font-family: "Bebas Neue", serif;
        font-size: 3rem;
        font-weight: 800;
        text-align: center;
        margin-bottom: 1.5rem;
    }

    @media (min-width: 640px) {
        .titulo {
            font-size: 3rem;
            line-height: 1.3;
        }
    }

    @media (min-width: 768px) {
        .titulo {
            font-size: 3rem;
            margin-bottom: 1.5rem;
        }
    }

    @media (min-width: 1024px) {
        .titulo {
            font-size: 3rem;
            margin-bottom: 2rem;
        }
    }
</style>
