---
const socialLinks = [
    {
        name: "WhatsApp",
        url: "https://wa.me/2494547001",
        icon: "whatsapp",
        color: "green",
        ariaLabel: "Contáctanos por WhatsApp",
    },
    {
        name: "MooveTandil",
        url: "https://www.instagram.com/moovetandil/",
        icon: "instagram",
        color: "blue",
        ariaLabel: "Visita nuestro Instagram MooveTandil",
    },
    {
        name: "FelipeMedinaTraining",
        url: "https://www.instagram.com/felipemedinatraining/",
        icon: "instagram",
        color: "blue",
        ariaLabel: "Visita nuestro Instagram FelipeMedinaTraining",
    },
];

const colors = {
    whatsapp: "text-green-600 border-green-600 hover:bg-green-100",
    instagram: "text-blue-600 border-blue-600 hover:bg-blue-100",
};
---

<section
    id="contact"
    class="bg-gray-50 py-16 sm:py-24 lg:py-20 px-4 sm:px-6 lg:px-8"
    role="region"
    aria-label="Sección de contacto"
>
    <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-start">
            <!-- Sección de Ubicación Mejorada -->
            <div itemscope itemtype="https://schema.org/LocalBusiness">
                <h2 id="location-heading" class="titulo">Nuestra Ubicación</h2>
                <div
                    class="w-full h-[300px] sm:h-[400px] md:h-[500px] rounded-xl overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-300"
                >
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3172.541851019552!2d-59.140620323273254!3d-37.32967870652874!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95911f001351e82f%3A0x344e89d4f6a63e55!2sMoove%20Tandil!5e0!3m2!1ses!2sar!4v1744861229175!5m2!1ses!2sar"
                        class="w-full h-full"
                        loading="lazy"
                        title="Ubicación de Moove Tandil en Google Maps"
                        tabindex="0"
                        aria-label="Mapa interactivo de nuestra ubicación"
                        referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
                <div
                    class="mt-6 space-y-3 text-gray-700"
                    itemprop="address"
                    itemscope
                    itemtype="https://schema.org/PostalAddress"
                >
                    <!-- Dirección con icono -->
                    <div class="flex items-start">
                        <svg
                            class="h-5 w-5 mr-2 mt-0.5 text-gray-500"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                            ></path>
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        <p>
                            <span class="font-medium" itemprop="streetAddress"
                                >Chacabuco 416</span
                            >,
                            <span itemprop="addressLocality">Tandil</span>,
                            <span itemprop="addressRegion">Buenos Aires</span>
                        </p>
                    </div>

                    <!-- Horarios con icono -->
                    <div class="flex items-start">
                        <svg
                            class="h-5 w-5 mr-2 mt-0.5 text-gray-500"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                            ></path>
                        </svg>
                        <div>
                            <p class="font-medium">Horarios de atención:</p>
                            <ul class="list-disc list-inside ml-4">
                                <li>
                                    <time
                                        itemprop="openingHours"
                                        datetime="Mo-Fr 08:00-20:00"
                                        >Lunes a Viernes: 7:00 - 20:00 hs</time
                                    >
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Teléfono con icono -->
                    <div class="flex items-center">
                        <svg
                            class="h-5 w-5 mr-2 text-gray-500"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                            ></path>
                        </svg>
                        <a
                            href={socialLinks[0].url}
                            class="hover:text-blue-600 transition-colors"
                            itemprop="telephone">+54 2494547001</a
                        >
                    </div>
                </div>
            </div>

            <!-- Sección de Contacto Mejorada -->
            <div>
                <h2 class="titulo">Contáctanos</h2>

                <!-- Enlaces Sociales Optimizados -->
                <div
                    class="flex flex-wrap gap-4 mb-8 justify-center md:justify-start"
                >
                    {
                        socialLinks.map(({ name, url, icon, ariaLabel }) => (
                            <a
                                href={url}
                                class={`flex items-center border-2 ${colors[icon]} text-lg  px-3 sm:px-4 py-2 rounded-2xl transition-all duration-200 hover:scale-105 hover:shadow-md focus:outline-none focus:ring-2 focus:ring-blue-500`}
                                aria-label={`${ariaLabel} (se abre en nueva ventana)`}
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-6 w-6 lg:mr-2"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    aria-hidden="true"
                                >
                                    {icon === "whatsapp" ? (
                                        <>
                                            <path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9" />
                                            <path d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1" />
                                        </>
                                    ) : (
                                        <>
                                            <rect
                                                x="2"
                                                y="2"
                                                width="20"
                                                height="20"
                                                rx="5"
                                                ry="5"
                                            />
                                            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" />
                                            <line
                                                x1="17.5"
                                                y1="6.5"
                                                x2="17.51"
                                                y2="6.5"
                                            />
                                        </>
                                    )}
                                </svg>
                                <span class="hidden md:inline-block">
                                    {name}
                                </span>
                            </a>
                        ))
                    }
                </div>

                <!-- Código QR Mejorado -->
                <figure class="text-center md:text-left">
                    <figcaption
                        id="qr-heading"
                        class="text-xl font-semibold mb-4 text-gray-900"
                    >
                        Escanea el código QR para más información
                    </figcaption>
                    <div
                        class="inline-block p-2 bg-white rounded-lg shadow-md w-40 sm:w-48"
                    >
                        <img
                            src="/qr.png"
                            alt="Código QR para contactar a Moove Tandil"
                            width="160"
                            height="160"
                            class="mx-auto"
                            loading="lazy"
                            aria-describedby="qr-heading"
                        />
                    </div>
                    <p class="mt-2 text-sm text-gray-600">
                        Apunta la cámara de tu teléfono al código
                    </p>
                </figure>
            </div>
        </div>
    </div>
</section>

<style>
    .titulo {
        font-family: "Bebas Neue", serif;
        font-size: 3rem;
        font-weight: 800;
        text-align: center;
        margin-bottom: 1.5rem;
    }

    @media (min-width: 640px) {
        .titulo {
            font-size: 3rem;
            line-height: 1.3;
        }
    }

    @media (min-width: 768px) {
        .titulo {
            font-size: 3rem;
            margin-bottom: 1.5rem;
        }
    }

    @media (min-width: 1024px) {
        .titulo {
            font-size: 3rem;
            margin-bottom: 2rem;
        }
    }
</style>
